{
    "compilerOptions": {
        // This Config can be adapted to suit specific frameworks as required - Refer to the commented section at the end of this file.

        // Standard Default Features
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",

        // Best practices
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
    },
    "ts-node": {
        "esm": true
    }

    /*
    ******************  EXAMPLE ADAPTED CONFIG - Next.JS  **************
    "compilerOptions": {
        // enable latest features
        "lib": [
            "ESNext"
        ],
        "target": "ESNext",
        "module": "ESNext",
        "moduleDetection": "force",
        "jsx": "react-jsx", // support JSX
        "allowJs": true, // allow importing `.js` from `.ts`
        // Bundler mode
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "verbatimModuleSyntax": true,
        "noEmit": true,
        // Best practices
        "strict": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        // Some stricter flags
        "useUnknownInCatchVariables": true,
        "noPropertyAccessFromIndexSignature": true
    }
    */
}
